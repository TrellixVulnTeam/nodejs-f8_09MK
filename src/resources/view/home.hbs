<div class="mt-4">
    <div class="row">
        {{#each Courses}}
        <div class="col-sm-6 col-lg-4">
                <div class="card card-course-item">
                    <img class="card-img-top" src={{this.image}}>
                    <div class="card-body">
                        <h4 class="card-title">{{this.description}}</h4>
                        <p class="card-text">{{this.name}}</p>
                    </div>
                    <a href="" class="btn btn-primary">Mua Khóa học</a>
                </div>
        </div>
        {{/each}}
    </div>
</div>
